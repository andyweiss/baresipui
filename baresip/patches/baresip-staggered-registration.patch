+/* ==================================================================
+ * Staggered Registration Patch v2.0
+ * ==================================================================
+ * Prevents all accounts from registering simultaneously.
+ * Each account delays registration by account_index * 2 seconds.
+ * For 20 accounts: spreads registration over 40 seconds.
+ */
+
+#define STAGGER_DELAY_MS 2000  /* 2 seconds between accounts */
+
+static uint32_t g_account_index = 0;
+
+struct stagger_ctx {
+	struct tmr tmr;
+	struct ua *ua;
+	bool is_fallback;
+};
+
+static void stagger_ctx_destructor(void *arg)
+{
+	struct stagger_ctx *ctx = arg;
+	tmr_cancel(&ctx->tmr);
+}
+
+static void stagger_timeout_handler(void *arg)
+{
+	struct stagger_ctx *ctx = arg;
+	struct account *acc;
+	int err;
+	
+	if (!ctx || !ctx->ua)
+		goto out;
+	
+	acc = ua_account(ctx->ua);
+	if (!acc)
+		goto out;
+	
+	warning("account: staggered registration triggered for #%u: %s\n",
+	        g_account_index, account_aor(acc));
+	
+	if (ctx->is_fallback)
+		err = ua_fallback(ctx->ua);
+	else
+		err = ua_register(ctx->ua);
+	
+	if (err) {
+		warning("account: staggered registration failed for %s (%m)\n",
+			account_aor(acc), err);
+	}
+	
+out:
+	mem_deref(ctx);
+}
